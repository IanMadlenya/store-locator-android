    <!-- PURPLE THEME -->
    <style name="AppTheme.Purple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_purple</item>
        <item name="colorAccent">@color/colorAccent_purple</item>
    </style>

    <style name="CustomPurpleNavigationViewLight">
        <!-- The main turn banner view at the top of the screen -->
        <!-- Background color of the banner -->
        <item name="navigationViewBannerBackground">@color/colorPrimary_purple</item>
        <!-- Color for the primary label that displays the turn name -->
        <item name="navigationViewBannerPrimaryText">@color/white</item>
        <!-- Color for the secondary label that occasionally appears underneath the primary label -->
        <item name="navigationViewBannerSecondaryText">@color/white</item>
        <!-- Primary color for the turn arrow icons-->
        <item name="navigationViewBannerManeuverPrimary">@color/white</item>
        <!-- Secondary color for the turn arrow icons (e.g. the line segment that forks off) -->
        <item name="navigationViewBannerManeuverSecondary">@color/white</item>

        <!-- Alternate background color for the dropdown list of upcoming steps -->
        <item name="navigationViewListBackground">@color/colorPrimary_purple</item>


        <!-- The summary view along the bottom of the screen -->
        <!-- Background color of the summary view -->
        <item name="navigationViewPrimary">@color/colorPrimary_purple</item>
        <!-- Tint color for icons in the summary view -->
        <item name="navigationViewSecondary">@color/white</item>
        <!-- Accent color for elements such as the recenter button -->
        <item name="navigationViewAccent">@color/white</item>
        <!-- Color for the main duration label in the summary view -->
        <item name="navigationViewPrimaryText">@color/white</item>
        <!-- Color for the secondary distance and ETA label in the summary view -->
        <item name="navigationViewSecondaryText">@color/white</item>

        <!-- Custom colors for progress bars displayed during navigation -->
        <item name="navigationViewProgress">@color/white</item>
        <item name="navigationViewProgressBackground">@color/colorPrimaryDark_purple</item>

        <!-- Custom colors for the route line and traffic -->

        <!-- Map style -->
        <item name="navigationViewMapStyle">@string/purple_map_style</item>
    </style>

